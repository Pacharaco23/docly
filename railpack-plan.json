{
    "php": "8.3",
    "extensions": [
        "ctype",
        "curl",
        "dom",
        "fileinfo",
        "filter",
        "hash",
        "mbstring",
        "openssl",
        "pcre",
        "pdo",
        "session",
        "tokenizer",
        "xml",
        "pdo_mysql",
        "redis",
        "bcmath"
    ],
    "node": "22",
    "composer": {
        "install": "--optimize-autoloader --no-scripts --no-interaction"
    },
    "npm": {
        "ci": true,
        "prune": {
            "omit-dev": true,
            "ignore-scripts": true
        },
        "build": "npm run build"
    },
    "artisan": [
        "config:cache",
        "event:cache",
        "route:cache",
        "view:cache"
    ],
    "storage": [
        "storage/framework/sessions",
        "storage/framework/views",
        "storage/framework/cache",
        "storage/framework/testing",
        "storage/logs",
        "bootstrap/cache"
    ]
}